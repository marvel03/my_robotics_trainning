<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
  
  <xacro:include filename="inertial_macros.xacro"/>   <!--im just gonna be using we learn bout it later-->

  <!-- First, setting up the colors -->
  <material name="white">
    <!-- You can refer to it by this name -->
    <color rgba="1 1 1 1"/>
  </material>

  <material name="orange">
    <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
    <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>  
  <!-- It is preferred to define materials in a different file -->

  <link name="base_link"/>
  <!-- Please note: in ROS everything is in meters -->

  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <!-- This is with respect to the parent link where the child link has to be placed -->
    <origin xyz="-0.1 0 0"/>
  </joint>

  <link name="chassis">
    <visual>
      <origin xyz="0.15 0 0.075"/>  <!-- This is for placing the link with respect to the joint properly -->
      <!-- This defines the shape and size of your link -->
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0.15 0 0.075"/>  <!-- This is for placing the link with respect to the joint properly -->
      <!-- This defines the shape and size of your link -->
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
      <material name="white"/>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.5">  <!--this is from the included file ok-->
       <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Left wheel link -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/> <!-- By default, a cylinder is formed such that the flat surface is facing the z-axis, so we have to rotate it so that its z-axis coincides with the y-axis of the base_link -->
    <axis xyz="0 0 1"/> <!-- Rotate around z-axis -->
  </joint>
  
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/> 
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/> 
      </geometry>
      <material name="blue"/>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>
    
  <gazeebo reference ="left_wheel">
    <material>Gazeebo/blue</material>
  </gazeebo>  
  <!-- Right wheel link -->
  <joint name="Right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="Right_wheel"/>
    <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/> <!-- By default, a cylinder is formed such that the flat surface is facing the z-axis, so we have to rotate it so that its z-axis coincides with the y-axis of the base_link -->
    <axis xyz="0 0 1"/> <!-- Rotate around z-axis -->
  </joint>
  
  <link name="Right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/> 
      </geometry>
      <material name="blue"/>
    </visual>
     <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/> 
      </geometry>
      <material name="blue"/>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>
  <gazeebo reference ="right_wheel">
    <material>Gazeebo/blue</material>
  </gazeebo>  
  <!-- caster wheel -->
  <joint name="caster_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="caster_wheel"/>
    <origin xyz="0.24 0 0"/>
  </joint>
  
  <link name="caster_wheel">
    <visual>
      <geometry>
       <sphere radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
       <sphere radius="0.05"/>
      </geometry>
      <material name="black"/>
    </collision>
    <xacro:inertial_sphere mass ="0.1" radius="0.05">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
  </link>
  <gazeebo reference ="caster_wheel">
    <material>Gazeebo/black</material>
   </gazeebo>  
</robot>
